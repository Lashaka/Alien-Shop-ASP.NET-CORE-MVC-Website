@model IEnumerable<Alien>
@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        background: black repeat center top;
        color: white;
    }

    table {
        border-collapse: collapse;
        width: 100%;
        margin: 50px auto;
        box-shadow: 2px 2px 10px #000;
        border-radius: 10px;
    }

    th, td {
        text-align: left;
        padding: 20px;
        font-size: 20px;
        color: #fff;
        font-family: "Comic Sans MS", cursive, sans-serif;
    }

    tr:nth-child(even) {
        background-color: #00bfff;
    }

    th {
        background-color: #ff0080;
        border-radius: 10px 10px 0 0;
    }

    select {
        background-color: #00bfff;
        border: 4px solid;
        border-color: #ff0080;
        border-radius: 5px;
        padding: 10px;
        font-size: 60px;
        appearance: none;
        outline: none;
        text-align: center;
    }

        select:focus {
            border-color: #00bfff;
            background-color: #ff0080;
        }

</style>

<h1>catalog page</h1>
<label>Alien category:</label>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(function () {
        $(".cat-select").change(function () {
            let selected = $('.cat-select').val();
            window.location.href = "/Catalog/Index/" + selected;
        });
    });
</script>

<form id="cat-form">
    <div class="align-content-center">
        <select class="cat-select" id="cat-select">
            <option value="">Selected type</option>
            <option value="0">All Aliens</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.CategoryId">@category.Name</option>
            }
        </select>
    </div>
</form>
<table class="table table-dark" id="alien-table">
    <tr>
        <th>Picture:</th>
        <th>Name:</th>
        <th>Description:</th>
        <th>Details:</th>
    </tr>
    @foreach (var Alien in Model)
    {
        <tr class="@Alien.CategoryId">
            <td>
                <img class="img-thumbnail" style="width:600px" src="@Alien.PicturePath">
            </td>
            <td>@Alien.Name</td>
            <td>@Alien.Descripition</td>
            <td><a href="/Catalog/Details?id=@Alien.AlienId">Details</a></td>
        </tr>
    }
</table>

@{
    var firstAlien = Model.FirstOrDefault();
    var selectedCategory = ViewBag.SelectedCategoryId;
}
@if (selectedCategory == null)
{
    <h1> All Aliens</h1>
}
else
{
    <h1>@(firstAlien?.Category?.Name ?? "")</h1>
}
