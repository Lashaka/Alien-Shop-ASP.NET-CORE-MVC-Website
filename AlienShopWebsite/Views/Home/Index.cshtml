@{
    ViewData["Title"] = "Index";
}
<style>
body {
  background: black repeat center top;
  color: white;
  font-family: Arial, sans-serif;
}

table {
  border-collapse: collapse;
  width: 80%;
  margin: 50px auto;
  box-shadow: 2px 2px 10px #000;
  border-radius: 30px;
  border: solid 6px #ff0080;
}

    th, td {
        text-align: left;
        padding: 20px;
        font-size: 40px;
        color: #fff;
        height:600px;
    }

    tr:nth-child(even) {
        background-color: #00bfff;
    }

    th {
        background-color: #ff0080;
        font-weight: bold;
        font-size: 50px;
        width:25%;
        height: 200px;
    }


    h1 {
        -webkit-text-stroke-width: 7px;
        -webkit-text-stroke: cyan;
        -webkit-text-stroke-color: cyan;
        -webkit-text-stroke-width: 5px;
        text-align: center;
        font-size: 100px;
        animation: StaticNeonEffect 6s ease-in-out infinite;
    }

    @@keyframes StaticNeonEffect {
        0% {
            color: blue;
            -webkit-text-stroke-color: #00bfff;
        }

        50% {
            color: #ff0080;
            -webkit-text-stroke-color: pink;
        }

        100% {
            color: blue;
            -webkit-text-stroke-color: #00bfff;
        }
    }

</style>
<h1 >the 3 most popular Aliens right now are:</h1>
<table class="table table-dark">
    <tr>
        <th>picture:</th>
        <th>Name:</th>
        <th>Description:</th>
        <th>number of comments:</th>
    </tr>
    @foreach (var alien in Model)
    {
        <tr>
            <td>
                <img class="img-thumbnail" style="width:600px" src="@alien.PicturePath">
            </td>
            <td>@alien.Name</td>
            <td>@alien.Descripition</td>
            <td>@alien.Comments.Count</td>
        </tr>
    }
</table>









