@{
    ViewData["Title"] = "Index";
}
<h2 style="text-align:center">the 2 most popular animals right now are:</h2>
<table class="table table-dark">
    <tr>
        <th>picture:</th>
        <th>Name:</th>
        <th>Description:</th>
        <th>number of comments:</th>
    </tr>
    @foreach (var Alien in Model)
    {
        <tr>
            <td>
                <img class="img-thumbnail" style="width:600px" src="@Alien.PicturePath">
            </td>
            <td>@Alien.Name</td>
            <td>@Alien.Descripition:</td>
            <td>@Alien.Comments.Count</td>
        </tr>
    }
</table>









