
@{
    ViewData["Title"] = "Index";
}
<style>
    body {
        background: black repeat center top;
        color: white;
    }

    table {
        border-collapse: collapse;
        width: 100%;
        margin: 50px auto;
        box-shadow: 2px 2px 10px #000;
        border-radius: 10px;
    }

    th, td {
        text-align: left;
        padding: 20px;
        font-size: 20px;
        color: #fff;
        font-family: "Comic Sans MS", cursive, sans-serif;
    }

    tr:nth-child(even) {
        background-color: #00bfff;
    }

    th {
        background-color: #ff0080;
        border-radius: 10px 10px 0 0;
    }

</style>
<h1>Adminstrator page</h1>
<div class="float-right">
    <a style="text-align:center" href="/Administrator/AddAlien">Add Alien</a>
</div>


<label>Animal category:</label>
<script>
    $(function () {
        $(".cat-select").change(function () {
            let selected = $('.cat-select').val();
            window.location.href = "/Administrator/Index/" + selected
        });
    });
</script>

<div class="align-content-center">

    <select class="cat-select">
        <option value="">Selected type</option>
        <option value="0">All Animals</option>
        @foreach (var category in ViewBag.Categories)
        {
                <option value="@category.CategoryId">@category.Name</option>
        }
    </select>
</div>

<table class="table table-dark">
    <tr>
        <th>picture:</th>
        <th>Name:</th>
        <th>Description:</th>
        <th></th>
    </tr>
    @foreach (var Alien in Model)
    {
            <tr>
                <td>
                    <img class="img-thumbnail" style="width:600px" src="@Alien.PicturePath">
                </td>
            <td>@Alien.Name</td>
                <td>@Alien.Descripition:</td>
            <td><a asp-action="EditAlien" asp-route-Id=@Alien.AlienId>Edit</a></td>
            <td><a asp-action="DeleteAlien" asp-route-Id=@Alien.AlienId>Delete</a></td>
            </tr>
    }
</table>

