
@{
    ViewData["Title"] = "EditAlien";
}
<style>
    body {
        background: black repeat center top;
        color: white;
        font-family: Arial, sans-serif;
    }

    table {
        border-collapse: collapse;
        width: 80%;
        margin: 50px auto;
        box-shadow: 2px 2px 10px #000;
        border-radius: 30px;
        border: solid 6px #ff0080;
    }

    th, td {
        text-align: left;
        padding: 20px;
        font-size: 40px;
        color: #fff;
    }

    tr:nth-child(even) {
        background-color: #00bfff;
    }

    th {
        background-color: #ff0080;
        font-weight: bold;
        font-size: 50px;
        width: 20%;
    }

    select {
        margin-top: 50px;
        background-color: #00bfff;
        border: 4px solid;
        border-color: #ff0080;
        border-radius: 5px;
        padding: 10px;
        font-size: 60px;
        appearance: none;
        outline: none;
        text-align: center;
        align-content: center;
        align-self: center;
        align-items: center;
    }

    form {
        text-align: center;
        align-content: center;
        align-self: center;
        align-items: center;
    }

    button {
        background-color: #ff0080;
        border: 6px solid #00bfff;
        color: black;
        border-radius: 50px;
        padding: 15px 30px;
        font-size: 60px;
        text-align: center;
        transition: all 0.5s ease;
        cursor: pointer;
    }

        button:hover {
            background-color: #00bfff;
            color: #ff0080;
        }


    h1 {
        -webkit-text-stroke-width: 7px;
        -webkit-text-stroke: cyan;
        -webkit-text-stroke-color: cyan;
        -webkit-text-stroke-width: 5px;
        text-align: center;
        font-size: 100px;
        animation: StaticNeonEffect 6s ease-in-out infinite;
    }

    @@keyframes StaticNeonEffect {
        0% {
            color: blue;
            -webkit-text-stroke-color: #00bfff;
        }

        50% {
            color: #ff0080;
            -webkit-text-stroke-color: pink;
        }

        100% {
            color: blue;
            -webkit-text-stroke-color: #00bfff;
        }
    }
</style>
<h1 style="text-align:center">EditAlien</h1>
<div id="DivForTable"></div>
<partial name="_MyPartialView"></partial>
